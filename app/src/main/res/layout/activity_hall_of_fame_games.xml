<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueApp"
    tools:context=".ui.HallOfFameGames">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="300dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/yellow" />

            <ImageView
                android:id="@+id/blue"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/blue" />

            <ImageView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/red" />

            <ImageView
                android:id="@+id/silver"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/silver"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/gold"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/gold"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/crystal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/crystal" />

            <ImageView
                android:id="@+id/ruby"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/ruby" />

            <ImageView
                android:id="@+id/saphire"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/sapphire" />

            <ImageView
                android:id="@+id/emerald"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/emerald" />

            <ImageView
                android:id="@+id/diamond"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/diamond"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/pearl"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/pearl" />

            <ImageView
                android:id="@+id/platinum"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/platinum" />

            <ImageView
                android:id="@+id/black"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/black" />

            <ImageView
                android:id="@+id/white"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/white"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/black2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/black_two" />

            <ImageView
                android:id="@+id/white2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/white_two" />

            <ImageView
                android:id="@+id/sun"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/sun" />

            <ImageView
                android:id="@+id/moon"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/moon" />

            <ImageView
                android:id="@+id/ultraSun"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/ultra_sun" />

            <ImageView
                android:id="@+id/ultraMoon"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/ultra_moon" />

            <ImageView
                android:id="@+id/sword"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/sword"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/shield"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:contentDescription="@string/game"
                app:srcCompat="@drawable/shield" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_game"
        app:layout_constraintBottom_toTopOf="@+id/scrollView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>